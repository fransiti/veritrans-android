<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_kioson_status"
    android:background="@color/payment_status_pending"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/sixteen_dp">

        <TextView
            android:id="@+id/text_title_payment_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="2"
            android:text="@string/payment_pending"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
        <ImageView
            android:id="@+id/img_transaction_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/sixteen_dp"
            android:contentDescription="@string/description_transaction_status"
            android:src="@drawable/ic_status_pending"/>


        <com.midtrans.sdk.uikit.widgets.SemiBoldTextView
            android:id="@+id/text_transaction_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/sixteen_dp"
            android:text="@string/thank_you"
            android:textColor="@color/white"
            android:textSize="@dimen/twenty_two_sp"
            android:textStyle="bold"/>


        <com.midtrans.sdk.uikit.widgets.SemiBoldTextView
            android:id="@+id/text_payment_error_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="@string/payment_unsuccessful_msg"
            android:textColor="@color/white"
            android:textSize="@dimen/secondary_text_size"
            android:textStyle="bold"
            android:visibility="invisible" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/twenty_four_dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/layout_trans_total_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:orientation="horizontal"
                android:visibility="visible">

                <com.midtrans.sdk.uikit.widgets.DefaultTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/payable_amount"
                    android:textColor="@color/white"
                    android:textSize="@dimen/primary_text_size" />

                <com.midtrans.sdk.uikit.widgets.DefaultTextView
                    android:id="@+id/text_amount"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_amount_here"
                    android:textColor="@color/white"
                    android:textSize="@dimen/primary_text_size" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/material_grey" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="@dimen/ten_dp"
                android:id="@+id/layout_trans_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible">

                <com.midtrans.sdk.uikit.widgets.DefaultTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/orderId"
                    android:textColor="@color/white"
                    android:textSize="@dimen/primary_text_size" />

                <com.midtrans.sdk.uikit.widgets.DefaultTextView
                    android:layout_alignParentRight="true"
                    android:id="@+id/text_order_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_order_id_here"
                    android:textColor="@color/white"
                    android:textSize="@dimen/primary_text_size" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/material_grey" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_trans_payment_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:orientation="horizontal">

                <com.midtrans.sdk.uikit.widgets.DefaultTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_payment_method"
                    android:textColor="@color/white"
                    android:textSize="@dimen/primary_text_size" />

                <com.midtrans.sdk.uikit.widgets.DefaultTextView
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_payment_type_here"
                    android:textColor="@color/white"
                    android:textSize="@dimen/primary_text_size" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/material_grey" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="@dimen/ten_dp"
                android:id="@+id/layout_trans_payment_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.midtrans.sdk.uikit.widgets.DefaultTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_payment_time"
                    android:textColor="@color/white"
                    android:textSize="@dimen/primary_text_size"
                    />

                <com.midtrans.sdk.uikit.widgets.DefaultTextView
                    android:layout_alignParentRight="true"
                    android:id="@+id/text_transaction_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="@string/text_payment_time_here"
                    android:textColor="@color/white"
                    android:textSize="@dimen/primary_text_size"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/material_grey" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>